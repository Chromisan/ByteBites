{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "es5",  // 修改为 es5 以确保更好的兼容性
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",  // 修改为 node，这是 Next.js 推荐的设置
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",  // 确保这个设置保持不变
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "baseUrl": ".",  // 添加基础URL配置
    "forceConsistentCasingInFileNames": true  // 添加文件名大小写一致性检查
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}